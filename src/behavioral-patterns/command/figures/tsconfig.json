{
  "display": "Configuration for Graphics Programming in PAI",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2015",
    "moduleResolution": "node",
    "lib": ["ESNEXT", "dom"],
    "allowJs": true,
    "rootDir": "./",
    "outDir": "./out",
    "declaration": true,
    "strictPropertyInitialization": true,     /* will raise an error when a class property was declared but not set in the constructor */
    "strictNullChecks": true,                 /* When type checking, take into account `null` and `undefined`. */
    "noImplicitAny": true,                    /* will issue an error whenever it would have inferred any:*/ 
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "alwaysStrict": true,                     /* Parse in strict mode and emit "use strict" for each source file. */
    "strict": true,                           /* Enable all strict type-checking options. */
    "noFallthroughCasesInSwitch": true,       /* Report errors for fallthrough cases in switch statement. */
    "noImplicitReturns": true,                /* Report error when not all code paths in function return a value. */
    "noUnusedLocals": true,                   /* Report errors on unused local variables */
    "sourceMap": true                        /* Generates corresponding '.map' file. */
  },
  "include": [
    "code/*.ts"
, "code/aux/view.ts"  ],
  "exclude": [
        "out",
        "node_modules",
        "build",
        "lib",
        "test",
        "public",
        "**/*.d.ts" // map files
  ]
}
